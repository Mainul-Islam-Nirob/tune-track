<%- include("partials/header") %>

<!-- Hero Section -->
<section class="bg-indigo-600 text-white rounded-xl p-10 mb-12 shadow-md">
  <div class="max-w-3xl mx-auto text-center">
    <h1 class="text-4xl sm:text-5xl font-bold mb-4">Welcome to TuneTrack ðŸŽ¶</h1>
    <p class="text-lg sm:text-xl mb-6">
      Your one-stop solution for managing all kinds of musical instruments â€” from guitars to tabla.
    </p>
    <a href="/categories" class="bg-white text-indigo-700 font-semibold py-2 px-4 rounded hover:bg-gray-100 transition">
      Browse Categories
    </a>
  </div>
</section>

<!-- Category Grid -->
<section class="max-w-7xl mx-auto px-4">
  <h2 class="text-2xl font-semibold mb-6">Explore Instrument Categories</h2>
  <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-6">
    <% if (!categories || categories.length === 0) { %>
      <div class="col-span-full text-center text-gray-600">No categories found. Add some!</div>
    <% } else { %>
      <% categories.forEach(category => { %>
        <a href="/categories/<%= category.id %>" class="block bg-white rounded-lg shadow hover:shadow-lg transition p-6">
          <img src="<%= category.image_url %>" alt="<%= category.name %>" class="h-40 w-full object-cover mb-3 rounded-md" />
          <h3 class="text-xl font-semibold text-indigo-700 mb-2"><%= category.name %></h3>
          <p class="text-gray-600"><%= category.description || "No description provided." %></p>
        </a>
      <% }) %>
    <% } %>
  </div>
</section>

<%- include("partials/footer") %>
