  <!-- Decorative background music icon pattern -->
  <div class="absolute inset-0 opacity-20 bg-[url('https://www.transparenttextures.com/patterns/black-thread.png')]"></div>

  <!-- Main content -->
  <div class="relative max-w-4xl mx-auto px-6 py-20 text-center z-10">
    <h1 class="text-4xl sm:text-5xl font-extrabold mb-4 tracking-tight animate-fade-in-up">
      ðŸŽ¼ Welcome to <span class="text-yellow-300">TuneTrack</span>
    </h1>
    <p class="text-lg sm:text-xl mb-6 animate-fade-in-up delay-100">
      Manage your musical instrument inventory with ease from ðŸŽ¸ guitars to ðŸª˜ tabla.
    </p>
    <div class="flex justify-center gap-4 animate-fade-in-up delay-200">
      <a href="/categories" class="bg-yellow-300 text-indigo-900 font-semibold py-3 px-6 rounded-xl shadow hover:bg-yellow-400 transition">
        ðŸŽ¹ Explore Categories
      </a>
      <a href="/items" class="border border-white py-3 px-6 rounded-xl hover:bg-white hover:text-indigo-700 transition">
        ðŸŽº View Instruments
      </a>
    </div>
  </div>
</section>


<!-- Category Grid -->
<section class="max-w-7xl mx-auto px-4">
  <h2 class="text-2xl font-semibold mb-6">Explore Instrument Categories</h2>
  <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-6">
    <% if (!categories || categories.length === 0) { %>
      <div class="col-span-full text-center text-gray-600">No categories found. Add some!</div>
    <% } else { %>
      <% categories.forEach(category => { %>
        <a href="/categories/<%= category.id %>" class="block bg-white rounded-lg shadow hover:shadow-lg transition p-6">
          <img src="<%= category.image_url %>" alt="<%= category.name %>" class="h-40 w-full object-cover mb-3 rounded-md" />
          <h3 class="text-xl font-semibold text-indigo-700 mb-2"><%= category.name %></h3>
          <p class="text-gray-600"><%= category.description || "No description provided." %></p>
        </a>
      <% }) %>
    <% } %>
  </div>
</section>

