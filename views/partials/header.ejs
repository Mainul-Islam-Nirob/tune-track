<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title><%= title || "TuneTrack" %></title>
  <script src="https://cdn.tailwindcss.com"></script>
  <link rel="stylesheet" href="/css/styles.css" />
</head>
<body class="bg-gray-100 text-gray-800 font-sans">

  <!-- Navbar -->
  <header class="bg-white shadow-md sticky top-0 z-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="flex justify-between items-center py-4">
        <a href="/" class="text-2xl font-bold text-indigo-700">🎼 TuneTrack</a>
        <nav class="space-x-4">
          <a href="/" class="<%= currentPath === '/' ? 'text-indigo-700 font-semibold' : 'text-gray-700' %> hover:text-indigo-600 transition">
            Home
          </a>

          <a href="/categories" class="<%= currentPath.startsWith('/categories') ? 'text-indigo-700 font-semibold' : 'text-gray-700' %> hover:text-indigo-600 transition">
            Categories
          </a>

          <a href="/items" class="<%= currentPath.startsWith('/items') ? 'text-indigo-700 font-semibold' : 'text-gray-700' %> hover:text-indigo-600 transition">
            Instruments
          </a>

        </nav>
      </div>
    </div>
  </header>
