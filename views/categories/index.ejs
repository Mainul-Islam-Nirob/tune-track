<%- include("../partials/header") %>

<section class="max-w-7xl mx-auto px-4 py-8">
  <div class="flex items-center justify-between mb-6">
    <h1 class="text-3xl font-bold text-indigo-700">Instrument Categories</h1>
    <a href="/categories/new" class="bg-indigo-600 text-white px-4 py-2 rounded hover:bg-indigo-700 transition">
      âž• Add Category
    </a>
  </div>

  <% if (categories.length === 0) { %>
    <div class="text-gray-600 text-center py-10 text-lg">
      No categories found. <a href="/categories/new" class="text-indigo-600 underline">Create one?</a>
    </div>
  <% } else { %>
    <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-6">
      <% categories.forEach(category => { %>
        <div class="bg-white rounded-lg shadow-md hover:shadow-lg transition overflow-hidden">
          <img src="<%= category.image_url %>" alt="<%= category.name %>" class="h-48 w-full object-cover">
          <div class="p-5">
            <h2 class="text-xl font-semibold text-indigo-700 mb-1"><%= category.name %></h2>
            <p class="text-gray-600 mb-4"><%= category.description || "No description provided." %></p>
            <div class="flex justify-between items-center text-sm">
              <a href="/categories/<%= category.id %>" class="text-indigo-600 hover:underline">View</a>
              <a href="/categories/<%= category.id %>/edit" class="text-yellow-600 hover:underline">Edit</a>
              <form action="/categories/<%= category.id %>?_method=DELETE" method="POST" onsubmit="return confirm('Delete this category?');">
                <button type="submit" class="text-red-600 hover:underline">Delete</button>
              </form>
            </div>
          </div>
        </div>
      <% }) %>
    </div>
  <% } %>
</section>

<%- include("../partials/footer") %>
