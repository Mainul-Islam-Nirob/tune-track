<%- include('../partials/header') %>

<main class="max-w-2xl mx-auto mt-16 bg-white p-8 rounded-xl shadow-xl">
  <h1 class="text-2xl font-bold text-red-600 mb-4">⚠️ Delete Category: <%= category.name %></h1>

  <p class="mb-4 text-gray-700">
    Are you sure you want to delete this category? This will <strong>permanently delete</strong> the category
    and all the following items:
  </p>

  <% if (items.length > 0) { %>
    <ul class="list-disc list-inside text-gray-800 mb-6">
      <% items.forEach(item => { %>
        <li><%= item.name %></li>
      <% }) %>
    </ul>
  <% } else { %>
    <p class="text-gray-600 mb-6">This category has no items.</p>
  <% } %>

  <form action="/categories/<%= category.id %>/delete" method="POST" class="flex gap-4">
    <button type="submit" class="bg-red-600 text-white px-6 py-2 rounded-lg shadow hover:bg-red-700 transition">
      ✅ Yes, delete all
    </button>
    <a href="/categories/<%= category.id %>" class="text-gray-500 hover:text-indigo-600 transition px-6 py-2">
      ❌ Cancel
    </a>
  </form>
</main>

<%- include('../partials/footer') %>
