<%- include('../partials/header') %>

<main class="max-w-3xl mx-auto mt-12 p-4 sm:p-6">
  <section class="bg-white rounded-2xl shadow-lg p-6 sm:p-10">
    <h1 class="text-3xl font-bold text-indigo-700 mb-2 text-center">Edit Instrument Category</h1>

    <form action="/categories/<%= category.id %>/update" method="POST" enctype="multipart/form-data" class="space-y-6">

      <!-- Name -->
      <div>
        <label for="name" class="block text-sm font-semibold text-gray-700 mb-1">Category Name</label>
        <input
          type="text"
          id="name"
          name="name"
          value="<%= category.name %>"
          class="w-full px-4 py-2.5 border border-gray-300 rounded-xl focus:ring-2 focus:ring-indigo-500 focus:outline-none shadow-sm transition"
          required
        />
      </div>

      <!-- Description -->
      <div>
        <label for="description" class="block text-sm font-semibold text-gray-700 mb-1">Description</label>
        <textarea
          id="description"
          name="description"
          rows="4"
          class="w-full px-4 py-2.5 border border-gray-300 rounded-xl focus:ring-2 focus:ring-indigo-500 focus:outline-none shadow-sm transition resize-none"
        ><%= category.description || '' %></textarea>
      </div>

      <!-- Image Upload -->
      <div>
        <label for="image" class="block text-sm font-semibold text-gray-700 mb-1">Change Image (optional)</label>
        <input
          type="file"
          id="image"
          name="image"
          accept="image/*"
          class="w-full px-4 py-2 border border-gray-300 rounded-xl bg-white text-sm focus:ring-2 focus:ring-indigo-500 focus:outline-none shadow-sm transition"
        />
        <% if (category.image_url) { %>
          <img src="<%= category.image_url %>" alt="Current Image" class="mt-4 rounded-xl w-full max-w-sm border shadow" />
        <% } %>
      </div>

      <!-- Buttons -->
      <div class="flex justify-between items-center pt-2">
        <button
          type="submit"
          class="bg-indigo-600 hover:bg-indigo-700 text-white font-semibold px-6 py-2.5 rounded-xl shadow transition"
        >
          💾 Update Category
        </button>
        <a href="/categories/<%= category.id %>" class="text-sm text-gray-500 hover:text-indigo-600 transition">← Cancel</a>
      </div>
    </form>
  </section>
</main>

<%- include('../partials/footer') %>
